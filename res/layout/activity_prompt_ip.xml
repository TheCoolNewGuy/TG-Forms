<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tgforms.v1.PromptIp" >

    <TextView
        android:id="@+id/promptYourIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Your IP :" />

    <TextView
        android:id="@+id/showIpSelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/promptYourIp"
        android:text="" />

    <TextView
        android:id="@+id/promptIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showIpSelf"
        android:text="Enter Ip of other device :" />

    <EditText
        android:id="@+id/editIp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promptIp" />

    <Button
        android:id="@+id/saveIp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editIp"
        android:text="Save IP" />

</RelativeLayout>